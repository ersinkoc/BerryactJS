{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "@oxog/berryact",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@oxog/berryact": ["./src/index.js"],
      "@oxog/berryact/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "examples/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.js",
    "**/*.spec.js"
  ]
}